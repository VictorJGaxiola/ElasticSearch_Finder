%link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin: "anonymous"}
= javascript_include_tag 'new_product'

.contenido.row
  = form_for @product, remote: true do |f|
    .col-md-6
      = f.text_field :name, class: 'pull-right', required: true
      = f.text_area  :description, class: 'pull-right', required: true
      = f.text_field :price, class: 'pull-right', required: true
      = f.file_field :imagen, required: true
      = f.text_field :stock, class: 'pull-right', required: true
      = f.label 'Category', required: true
      = select 'product', 'category_id', Category.all.collect {|c| [c.name, c.id]}, {include_blank: false}, required: true
    .col-md-6
      = f.submit
      = button_tag "Cancel", type: 'button', id: 'cancel'
